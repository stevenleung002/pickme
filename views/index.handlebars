<!doctype html>

<html>
<head>
	<title>PickMe</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/bootstrap.css"/>  
</head>

<body>
<div class="container">
	<div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <form class="form-horizontal" action="/createEvent" method="post">
          <fieldset>
            <!-- Event Name input-->
            <div class="form-group">
              <label class="col-md-4 control-label" style="font-size:20px; color:White" for="name">Event Name</label>
              <div class="col-md-8">
                <input id="eventName" name="eventName" style="font-size:20px" type="text" placeholder="Event Name" class="form-control">
              </div>
            </div>
    
            <!-- Password input-->
            <div class="form-group">
              <label class="col-md-4 control-label" style="font-size:20px; color:White" for="password">Password</label>
              <div class="col-md-8">
                <input id="eventPassword" name="eventPassword" style="font-size:20px" type="password" placeholder="Event Password" class="form-control">
              </div>
            </div>
            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
              </div>
            </div>
          </fieldset>
          </form>
        </div>
      </div>
	</div>
</div>

</body>
</html>
