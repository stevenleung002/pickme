<!doctype html>

<html>
<head>
	<title>PickMe</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/bootstrap.css"/>  
</head>

<body style="padding-top: 70px;padding-bottom: 30px;margin:30px">
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">	
			<fieldset>
			<div style="border: 1px solid rgb(200,200,200); background-color:rgba(255, 255, 255, 0.8); border-radius:15px; padding:5px; max-width: 550px;">	
				<div align="center">
					<h2>{{eventName}}</h2>
					<form id="addPhoneNumberForm" role="form" action="/enterRaffle" method="post">
						
						<h2>Input Phone Number</h2>

						<input type="txt" class="form-control" placeholder="phone number" name="phoneNumber">
						<input type="hidden" name="eventName" value="{{eventName}}">
						<button id="phonebutton" type="submit" class="btn btn-primary" style="margin:5px">Submit</button>

					</form>
				</div>
			</div>
			</fieldset>
		</div>
	</div>
</div>
